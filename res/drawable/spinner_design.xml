<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true" >
		<shape android:shape="rectangle" >
		    <gradient
		        android:startColor="#d7ba85"
		        android:endColor="#84652c"
		        android:angle="270" ></gradient>
		    <stroke
		        android:width="2dp"
		        android:color="#856f2e" />
		    <corners android:radius="4dp" />
		    <padding
		        android:top="5dp"
		        android:right="10dp"
		        android:bottom="5dp"
		        android:left="10dp" ></padding>
		</shape>
	</item>
	
    <item android:state_pressed="false" >
		<shape android:shape="rectangle" >
		    <gradient
		        android:startColor="#d3b0a1"
		        android:endColor="#9d6349"
		        android:angle="270" ></gradient>
		    <stroke
		        android:width="0.66dp"
		        android:color="#b0a278" />
		    <corners android:radius="4dp" />
		    <padding
		        android:top="5dp"
		        android:right="10dp"
		        android:bottom="5dp"
		        android:left="10dp" ></padding>
		</shape>
	</item>

</selector>