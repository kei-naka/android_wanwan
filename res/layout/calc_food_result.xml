<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include layout="@layout/titlebar" />
    
    <TextView
        style="@style/header"
        android:textSize="@dimen/textM"
        android:text="何をあげようかな？？" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dip"
        android:background="#f4ede4"
        android:orientation="vertical" >
	    
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/textM"
	        android:textColor="#000"
	        android:text="１日の消費カロリーは" />
	    
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dip"
	        android:layout_marginBottom="5dip"
	        android:id="@+id/totalCarolie"
	        android:gravity="center"
	        android:textSize="@dimen/textL"
	        android:textColor="#000"
	        android:text="681 kcal" />
	    
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="20dip"
	        android:textSize="@dimen/textM"
	        android:textColor="#000"
	        android:text="くらいだと思われます。 " />
	    
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/textM"
	        android:textColor="#000"
	        android:text="１日３回食事をあげるとして、今回は" />
	    
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dip"
	        android:layout_marginBottom="5dip"
	        android:id="@+id/eachCarolie"
	        android:gravity="center"
	        android:textSize="@dimen/textL"
	        android:textColor="#000"
	        android:text="227 kcal" />
	    
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="20dip"
	        android:textSize="@dimen/textM"
	        android:textColor="#000"
	        android:text="くらいあげましょう。" />
	    
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/textM"
	        android:textColor="#000"
	        android:text="だいたい、" />
	    
	    <Spinner
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dip"
	        android:layout_marginBottom="5dip"
	        android:background="@drawable/spinner_design"
	        android:gravity="center"
	        android:id="@+id/curFoodCandidate"
	        android:entries="@array/curFoodCandidate" />
	    
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="20dip"
	        android:textSize="@dimen/textM"
	        android:textColor="#000"
	        android:text="あげるといいようです。" />
	    
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="20dip"
	        android:gravity="center"
	        android:textSize="@dimen/textM"
	        android:textColor="#000"
	        android:text="あくまで目安だから、期待通りにならなくても怒らないでねー。的なことを書く但し書き" />
	    
	    <Button
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:textColor="#000"
	        android:id="@+id/btnInputCurFoodInfo"
	        android:padding="10dip"
	        android:background="@drawable/button_design"
	        android:text="何をどれくらいあげたか入力" />
    
    </LinearLayout>
    
</LinearLayout>
